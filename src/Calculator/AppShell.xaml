<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Calculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Calculator"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="{DynamicResource Primary}"
    FlyoutBackgroundColor="{DynamicResource SecondaryColor}"
    Shell.TitleColor="{DynamicResource Accent}"
    Shell.ForegroundColor="{DynamicResource Accent}">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="ExtendPage" 
        ContentTemplate="{DataTemplate local:ExtendPage}"
        Route="ExtendPage" />
    <ShellContent
        Title="About" 
        ContentTemplate="{DataTemplate local:About}"
        Route="About" />
    <ShellContent
        Title="Menu" 
        ContentTemplate="{DataTemplate local:Menu}"
        Route="Menu" />

</Shell>
